<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.renj.fragment">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RFragment">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".add.AddFragmentActivity"
            android:label="@string/add_fragment" />

        <activity
            android:name=".replace.ReplaceFragmentActivity"
            android:label="@string/replace_fragment" />

        <activity
            android:name=".replace.DefaultReplaceActivity"
            android:label="@string/replace_def_fragment" />

        <activity
            android:name=".vp.VpFragmentActivity"
            android:label="@string/vp_fragment" />
    </application>

</manifest>